<h1>Create New Question</h1>

<form action="/tests/1/questions" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <p>
    <label for="question-test_id">Test id:</label>
    <input type="number" name="question[test_id]" id="question-test_id" value="<%= params[:test_id] %>">
  </p>

  <p>
    <label for="question-body">Body:</label>
    <textarea name="question[body]" id="question-body"></textarea>
  </p>

  <input type="submit" value="Create">
</form>
